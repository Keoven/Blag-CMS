<h1>List of All Comments</h1>
<div class="toppadding">
  <% if @comments.nitems != 0 %>
  <table border="0" cellpadding="0" cellspacing="0">
    <tr id="head">
      <th>Email</th>
      <th>Body</th>
      <th>Comment Date</th>
      <th colspan="3">Article</th>
    </tr>
    <% i = 0 %>
    <% @comments.each do |comment|%>
      <tr class="<%= i % 2 == 1 ? "rowodd" : "roweven" %>">
        <td><%= comment.email %></td>
        <td><%= comment.body %></td>
        <td><%= comment.comment_date %></td>
        <td><%= Article.find(comment.article_id).title %></td>
        <td><%= link_to "Edit", edit_comment_path(comment) %></td>
        <td><%= link_to "Show", comment_path(comment) %></td>
	<td><%= link_to "Delete", comment, :confirm => "Are you sure you wane to delete this comment?", :method => :delete %></td>
      </tr>
    <% i += 1 %>
    <% end %>
  </table>
  <% end %>
</div>


<%= link_to "Create New Comment", new_comment_path %>
